<div class="span4" style ="width:500px;padding:20px;border-radius:5px;border:0px solid #000000;text-align:center">
<h5>In Progress (<small> Submitted by tab </small>)</h5>
<table class="table table-condensed">
  <% @in_progress.each do |c| %>
  <tr>
     <td><b style="color:#009999;border-radius:3px;padding:2px;">Residential </b></td>
     <td><%= link_to c.applicant_name, c %></td>
     <td><%= c.customer_verification.tab.name %></td>
  </tr>
  <% end %>
 </table>

<table class="table table-condensed">
  <% @business_in_progress.each do |c| %>
